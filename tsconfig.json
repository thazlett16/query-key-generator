{
    "compilerOptions": {
        "target": "es2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true
    },
    "include": ["src", "test"],
    "exclude": ["node_modules"]
}
